<!DOCTYPE html>
<html>
  <head>
    <title>NinetyNineCats</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <% if flash.now[:error] %>
      <% flash.now[:error].each do |err| %>
        <%= err %>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
